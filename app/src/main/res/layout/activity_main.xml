<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:yyh="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.yyh.drawabletest.MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <com.example.yyh.drawabletest.DrawableView
            android:id="@+id/id_qiqiu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:src="@drawable/qiqiu" >
        </com.example.yyh.drawabletest.DrawableView>

        <com.example.yyh.drawabletest.DrawableView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_margin="10dp"
            android:src="@drawable/aa" >
        </com.example.yyh.drawabletest.DrawableView>

        <com.example.yyh.drawabletest.DrawableView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:src="@drawable/icon" >
        </com.example.yyh.drawabletest.DrawableView>

        <com.example.yyh.drawabletest.DrawableView
            android:id="@+id/id_meinv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:src="@drawable/aa"
            yyh:broderRadius="20dp"
            yyh:type="round"
         >
        </com.example.yyh.drawabletest.DrawableView>

        <com.example.yyh.drawabletest.DrawableView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:src="@drawable/icon"
            yyh:broderRadius="40dp"

            yyh:type="round"
          >
        </com.example.yyh.drawabletest.DrawableView>

        <com.example.yyh.drawabletest.DrawableView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:src="@drawable/qiqiu"
          yyh:broderRadius="40dp"
            yyh:type="round" >
        </com.example.yyh.drawabletest.DrawableView>
    </LinearLayout>
</ScrollView>
